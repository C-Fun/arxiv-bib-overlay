{
    "manifest_version": 2,
    "name": "arXiv bib overlay",
    "description": "Displays reference and citation data from NASA ADS and Semantic Scholar on arXiv abstract pages, with links to more information.",
    "version": "0.1.2",

    "icons": {"48": "static/logo-128.png"},
    "browser_action": {"default_icon": "static/logo-128.png"},

    "content_scripts": [
        {
            "matches": ["https://arxiv.org/abs/*"],
            "js": [
                "static/jquery-3.2.1.min.js",
                "static/bib_lib.js",
                "static/bib_source_ads.js",
                "static/bib_source_s2.js",
                "static/bib_source_inspire.js",
                "static/bib.js"
            ],
            "css": ["static/style.css"]
        }
    ],
    "permissions": [
        "https://api.semanticscholar.org/*",
        "https://api.adsabs.harvard.edu/*"
    ],
    "web_accessible_resources": [
        "static/source-s2.png",
        "static/source-ads.png",
        "static/source-inspire.png",
        "static/icon-s2.png",
        "static/icon-ads.png",
        "static/icon-inspire.png",
        "static/icon-scholar.png",
        "static/icon-doi.png",
        "static/icon-arxiv.png"
    ]
}
